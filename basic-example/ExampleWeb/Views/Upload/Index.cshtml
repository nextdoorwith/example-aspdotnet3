
@{
    ViewData["Title"] = "Index";
}
@model UploadModel

<h1>ファイルアップロードテスト</h1>

<p class="my-5" />

<div class="card">
    <div class="card-header alert alert-info">同期アップロードの例</div>
    <div class="card-body">
        <form asp-action="Regist" enctype="multipart/form-data" method="post">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Name" type="text" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="FileList" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="FileList" type="file" class="form-control-file">
                    <span asp-validation-for="FileList" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="登録" />
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header alert alert-info">javascriptによる非同期アップロードの例</div>
    <div class="card-body">
        <form asp-action="UploadByBuffered" enctype="multipart/form-data" method="post">
            <div class="form-group row">
                <label asp-for="FileList" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input name="fileList" type="file" class="form-control-file">
                </div>
            </div>
            <div class="form-group form-inline">
                <input class="btn btn-primary" type="submit" value="登録" />
                <span id="result" class="ml-5">aaaa</span>
            </div>
        </form>
    </div>
</div>
